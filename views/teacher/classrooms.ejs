<!-- content -->

      <div class="container-sm p-4">
        
       <div class="card text-center">
        <div class="card-header">
            <h1 class="card-title">
                Classrooms
            </h1>
        </div>
        <div class="card-body table-group-divider ">
            <table class="table">
                <thead class="table-primary text-center borde border-secondary">
                  <th scope="col">Title</th>
                  <th scope="col">students</th>
                </thead>
                <tbody>
                  <%
                    classrooms.forEach(classroom =>{
                        %>
                        <tr>
                            <td><%= classroom.title%></td>
                            <td> <a href="/home/teacher/classroom/<%= classroom.id %>" class="btn btn-login px-5">view</a></td>
                            
                        </tr>
                        <%
                    })

                  %>
                </tbody>
              </table>
        </div>
      </div>
       </div>
        
    
  </div>
    
    
