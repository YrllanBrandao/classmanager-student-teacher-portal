<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Assignment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <!-- <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script> -->

  
    <link rel="stylesheet" href="../../../_css/assignments.css">

</head>
  <body>
 
  <div class="container-fluid m-0 p-0">
    <nav class="navbar navbar-dark bg-dark ">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Class manager</a>
 
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>

          
          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Class manager</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <div class="row  text-white d-flex text-center container-fluid justify-content-center align-items-center p-2">
                
                Welcome, <%= username%>!
           
             
              </div>
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/home/teacher">Home</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="/home/teacher/assignment/new">assignment upload</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" href="/home/teacher/assignments">assignment list</a>
                  </li>
                  
                  <li class="nav-item">
                    <a class="nav-link" href="#">Classrooms</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/home/teacher/write_notice">Write notice</a>
                  </li>
                  
                  <li class="nav-item">
                    <a class="nav-link  d-flex align-items-center  gap-2" href="/home/teacher/profile">Profile</a>
                 
                  <li class="nav-item">
                    <a class="nav-link  d-flex align-items-center  gap-2" href="/home/teacher/change_password">Change password</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link link-danger d-flex align-items-center  gap-2" href="/logout">Logout <iconify-icon icon="ion:exit-outline" style="color: #992A3B;" data-width="25px"></iconify-icon></a>
                  </li>
              </ul>
             
            </div>
          </div>
        </div>
      </nav>
<!-- content -->

      <div class="container-sm p-4">
        
        <div class="card">
            <div class="card-header ">
                <h1 class="card-title text-center"><%= assignment.title%></h1>
            <figure class="d-flex flex-column align-items-end">
                <blockquote class="blockquote">
                  <p>For classroom  <%= assignment.receiver%></p>
                </blockquote>
                <figcaption class="blockquote-footer">
                  Deadline <cite title="Source Title"><%= assignment.deadline%></cite>
                </figcaption>
              </figure>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col text-wrap text-center">
                        <%= assignment.assignment%>
                    </div>
                </div>
                <div class="row border-top border-secondary">
                    <div class="d-flex flex-row align-items-center justify-content-center gap-5 container-fluid border-bottom border-secondary">
                        <div class="fs-5">
                          Submissions
                        </div>
                        <div class="fs-5"> Max. mark: <%=  assignment.mark %></div>
                    </div>
                    <table class="table text-center">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Student</th>
                            <th scope="col">Submited on </th>
                            <th scope="col">Submission</th>
                            <th scope="col">Enter Marks</th>
                          </tr>
                        </thead>
                        <tbody class="table-group-divider text-center">
                         <!-- submissions -->
                         <%
                            submissions.forEach(submission =>{
                                %>

                                <tr>
                                    <td><%= submission.id%></td>
                                    <td><%= submission.owner%></td>
                                    <td> <span class="notice-date"><%= submission.createdAt %></span> </td>
                                    <td>
                                        <a href="/submission/<%= submission.submissionUrl%>" target="_blank" class="btn btn-login"> Download</a>
                                    </td>
                                    <td><a href="" class="btn btn-login">Enter Mark</a></td>
                                </tr>
                                <%
                            })
                         %>
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    
      </div>
      
  </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
   
  <script src="../../../_javascript/buttonBack.js"></script>
  <script src="../../../_javascript/formaDate.js"></script>
  
   <!-- iconify script -->
   <script src="https://code.iconify.design/iconify-icon/1.0.0/iconify-icon.min.js"></script>
   
</body>
</html>