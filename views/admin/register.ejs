</head>
  <body>
 
    <div class="container-fluid  p-0  vh bg-main m-0">
      <nav class="navbar navbar-dark bg-dark ">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Class manager</a>
  
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
  
          
          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Class manager</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <div class="row  text-white d-flex text-center container-fluid justify-content-center align-items-center p-2">
                
                Welcome, ADMINISTRATOR!
           
             
              </div>
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/home/admin">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="/home/admin/register_user">Register user</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/home/admin/register_classroom">Register classroom</a>
                </li>
                  <li class="nav-item">
                    <a class="nav-link " href="#">Administrators list</a>
                  </li>
                  <li class="nav-item">
                    <li class="nav-item">
                      <a class="nav-link " href="/home/admin/teachers_list">Teachers list</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link " href="/home/admin/students_list">Students list</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/home/admin/classrooms_list">Classroooms list</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link  d-flex align-items-center  gap-2" href="/home/admin/profile">Profile</a>
                 
                  <li class="nav-item">
                    <a class="nav-link  d-flex align-items-center  gap-2" href="/home/admin/change_password">Change password</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link link-danger d-flex align-items-center  gap-2" href="/logout">Logout <iconify-icon icon="ion:exit-outline" style="color: #992A3B;" data-width="25px"></iconify-icon></a>
                  </li>
              </ul>
             
            </div>
          </div>
        </div>
      </nav>
      <br>
      <br>
        <form action="/home/admin/register_user/save"  enctype="multipart/form-data" method="post" class="form-control container-sm d-flex flex-column gap-3 mx-2 p-4 form-register mx-auto" id="form-register">
            <div class="form-header d-flex align-items-center flex-column justify-content-center">
                <div class="profile">
                    
                </div>
                <h1>Register a new account </h1>
    
                
            </div>
            
                    <div class="form-floating mb-6 ">
                        <input type="text" class="form-control" name="name" id="floatingName" placeholder="jose" required>
                        <label for="floatingName">Name</label>
                        
                      </div>
               
               
                    <div class="form-floating mb-6">
                        <input type="text" class="form-control" name="lastName" id="floatingLastname" placeholder="Silva" required>
                        <label for="floatingLastname">Last Name</label>
                        
                      </div>
                      

                      <!-- need verify if this username is available -->
                      <div class="form-floating mb-6 ">
                        <input type="text" class="form-control" name="username" id="floatingUsername" placeholder="jose" required>
                        <label for="floatingUsername">Username</label>
                        
                      </div>
              
                
           
                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com" required value="@outlook.com"> 
                    <label for="floatingInput">Email address</label>
                    
                  </div>
         
        
           
           
                <div class="col-md-12">
                    <div class="form-floating mb-6">
                        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" value="12345678" required>
                        <label for="floatingPassword">Password</label>
                      </div>
                </div>
                <div class="mb-3">
                  <label for="formFile" class="form-label">Profile picture</label>
                  <input class="form-control" type="file" id="formFile" name="profilePicture" required>
                  <input type="hidden" name="ext" id="ext">
                </div>
        
                      <label for="type">Account Type</label>
                      <select class="form-select" aria-label="Default select example"name="accountType" id="type">
                        
                        <option value="1" selected>Administrator</option>
                        <option value="2">Teacher</option>
                        <option value="3">Student</option>
                      </select>
             
                <div class="row " id="conditional-row">
                  <div class="col" >
                    <label for="type">Classroom</label>
                      <select class="form-select" aria-label="Default select example"name="classroom"  required>
                       <option selected>SELECT</option>
                       <%
                          classes.forEach(classroom =>{
                            %>
                            <option > <%= classroom.title%> </option>
                            <%
                          })
                            %>
                      </select>
                  </div>
                  
                </div>
              <div class="row align-items-center justify-content-center">
                
                    <button type="submit" class="btn btn-register col-md-6">
                        Register
                    </button>
                
              </div>
        </form>
    
       </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
       <script src="../../_javascript/conditionlform.js"></script>
